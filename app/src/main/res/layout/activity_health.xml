<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HealthActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_centerVertical="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="#0D403E3E"
            android:padding="5dp"
            android:id="@+id/btnCameraTest">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:src="@drawable/baseline_camera_alt_24"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Camera Test"
                android:layout_marginLeft="30dp"
                android:textSize="20dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="#0D403E3E"
            android:padding="5dp"
            android:id="@+id/btnBluetoothTest">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:src="@drawable/baseline_bluetooth_24"/>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BlueTooth Test"
                android:layout_marginLeft="30dp"
                android:textSize="20dp"
                />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="#0D403E3E"
            android:padding="5dp"
            android:id="@+id/btnSensorTest">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:src="@drawable/baseline_sensor_window_24"/>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sensor Test"
                android:layout_marginLeft="30dp"
                android:textSize="20dp"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="#0D403E3E"
            android:padding="5dp"
            android:id="@+id/btnMicrphoneTest">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:src="@drawable/baseline_mic_24"/>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Microphone Test"
                android:layout_marginLeft="30dp"
                android:textSize="20dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="#0D403E3E"
            android:padding="5dp"
            android:id="@+id/btnRootedTest">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:src="@drawable/baseline_android_24"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rooted Test"
                android:layout_marginLeft="30dp"
                android:textSize="20dp"
                />

        </LinearLayout>
    </LinearLayout>






</RelativeLayout>